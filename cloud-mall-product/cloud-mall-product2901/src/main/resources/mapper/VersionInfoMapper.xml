<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">




<mapper namespace="com.boot.dao.VersionInfoMapper">

    <select id="selectVersionInfoByPid" resultType="com.boot.pojo.VersionInfo">
        select * from versioninfo where p_id=#{pid}
    </select>

    <select id="selectAllVersionInfo" resultType="com.boot.pojo.VersionInfo">
        select * from versioninfo
    </select>

    <select id="selectOrderCountBypid" resultType="int">
        SELECT COUNT(DISTINCT `order`) FROM versioninfo WHERE p_id=#{pid}
    </select>

    <select id="selectVersionInfoByPidAndOrder" resultType="com.boot.pojo.VersionInfo">
        select versionId,name from versioninfo where p_id=#{pid} AND `order`=#{order}
    </select>

    <select id="selectVersionInfoTitle" resultType="java.lang.String">
        select title from versioninfo where p_id=#{pid} AND `order`=#{order} liMit 1
    </select>

    <select id="selectVersionInfoDesc" resultType="java.lang.String">
        select description from versioninfo where p_id=#{pid} AND `order`=#{order} liMit 1
    </select>

    <select id="selectPriceByversionId" resultType="java.math.BigDecimal">
        select price from versioninfo where versionId=#{versionId}
    </select>


    <select id="selectNameByversionId" resultType="java.lang.String">
        select `name` from versioninfo where versionId=#{versionId}
    </select>


    <select id="selectVersionInfoByLimit" resultType="com.boot.pojo.VersionInfo">
        select * from versioninfo limit #{page} ,#{size}

    </select>

    <select id="selectVersionInfoByLimitAndPid" resultType="com.boot.pojo.VersionInfo">
        select * from versioninfo where p_id=#{pid} limit #{page},#{size}
    </select>

    <select id="selectversionInfoCountByPid" resultType="int">
        select count(*) from versioninfo where p_id=#{pid}
    </select>

    <select id="selectAllversionInfoCount" resultType="int">
        select count(*) from versioninfo
    </select>


    <insert id="insertVersionInfo" parameterType="com.boot.pojo.VersionInfo">
        insert into versioninfo values(#{versionId},#{name},#{p_id},#{price},#{description},#{order},#{title})
    </insert>

    <update id="updateVersionInfo" parameterType="com.boot.pojo.VersionInfo">
         update versioninfo set `name` = #{name} ,
         p_id=#{p_id},`order`=#{order},price=#{price},description=#{description},title=#{title}
         where versionId=#{versionId}
    </update>

    <delete id="deleteVersionInfo">
        delete from versioninfo where versionId=#{versionId}
    </delete>


    <select id="selectVersionByVersionId" resultType="com.boot.pojo.VersionInfo">
        select * from versioninfo where versionId=#{versionId}
    </select>

</mapper>